{
  "name": "@autoblog/automation",
  "version": "1.0.0",
  "description": "Content Automation Engine for AUTOBLOG - AI-powered article generation and publishing",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "generate": "tsx scripts/generate-article.ts",
    "batch": "tsx scripts/batch-generate.ts",
    "daily": "tsx scripts/daily-scheduler.ts",
    "daily:dry-run": "tsx scripts/daily-scheduler.ts --dry-run",
    "telegram": "tsx scripts/telegram-bot.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "openai": "^4.77.0",
    "dotenv": "^16.4.7",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.1",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.1",
    "telegraf": "^4.16.3",
    "cheerio": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
