{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Content authors and contributors"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "bio": {
      "type": "text",
      "maxLength": 500,
      "required": false
    },
    "role": {
      "type": "string",
      "maxLength": 100,
      "required": false
    },
    "expertise": {
      "type": "json",
      "required": false
    },
    "socialLinks": {
      "type": "component",
      "repeatable": false,
      "component": "shared.social-links"
    },
    "isAI": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "author"
    }
  }
}
