# ===========================================
# AUTOBLOG Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ----- CMS (Strapi Cloud) -----
STRAPI_URL=https://your-strapi-instance.strapiapp.com
STRAPI_API_TOKEN=your_strapi_api_token_here

# ----- AI APIs -----
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OPENAI_API_KEY=sk-your-openai-key-here

# ----- Database (Optional - for local Strapi) -----
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=your_db_password

# ----- Automation Settings -----
ANTHROPIC_MODEL=claude-sonnet-4-20250514
DEFAULT_AUTHOR=AUTOBLOG AI
DEFAULT_STATUS=draft

# ----- Telegram Bot -----
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ALLOWED_USERS=
TELEGRAM_WEBHOOK_SECRET=your_random_secret_string

# ----- n8n Workflow Automation (Optional) -----
N8N_WEBHOOK_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key

# ----- Analytics (Optional) -----
GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ----- Site URLs -----
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://blog.optaimum.com

# ----- Cron & Revalidation (required for scheduled posts) -----
CRON_SECRET=your_random_cron_secret
REVALIDATION_SECRET=your_random_revalidation_secret
